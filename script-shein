-- Criar banco de dados (opcional)
CREATE DATABASE shein_ficticio;

-- =============================
-- üß© 1. CATEGORIAS
-- =============================
CREATE TABLE categorias (
    id_categoria SERIAL PRIMARY KEY,
    nome VARCHAR(100) NOT NULL
);

INSERT INTO categorias (nome) VALUES
('Moda Feminina'),
('Moda Masculina'),
('Acess√≥rios'),
